<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="MemberVOmapper">
	<!-- select쿼리문 모듈화 -->
	<sql id="select-member">
		select
		id, password, name, address
		from member
	</sql>
	<sql id="orderby-id-desc">
		order by id desc
	</sql>
	<!-- DML -->
	<insert id="registerMember" parameterType="memberVO">
		INSERT INTO member(id,password,name,address)
		values(#{id}, #{password}, #{name}, #{address})
	</insert>
	<delete id="deleteMember" parameterType="string">
		delete from member where
		id = #{value}
	</delete>
	<update id="updateMember" parameterType="memberVO">
		update member set
		name=#{name}, address=#{address} where id=#{id}
	</update>
	<!-- 동적쿼리 이름, 주소,모두 다 검색 -->
	<select id="showAllMember" parameterType="memberVO"
		resultType="memberVO">
		<include refid="select-member" />
		<where>
			<if test="name != null">
				name like #{name}
			</if>
			<if test="address != null">
				or address like #{address}
			</if>
		</where>
		<include refid="orderby-id-desc" />
	</select>
	<!-- 이름으로 찾기 -->
	<select id="getMember" parameterType="string"
		resultType="memberVO">
		<include refid="select-member" />
		where name = #{value}
	</select>
	<!-- 아이디가 존재하는지 찾기 -->
	<select id="idExist" parameterType="string" resultType="boolean">
		SELECT
		IF(COUNT(*) = 1, 1, 0)
		from member
		where id = #{value}
	</select>
	<!-- 로그인 기능(id, password 일치하는 것이 존재하는지 확인) -->
	<select id="login" parameterType="memberVO"
		resultType="boolean">
		SELECT IF(COUNT(*) = 1, 1, 0)
		from member
		where id = #{id}
		and password =#{password}
	</select>
</mapper>