package com.service.spring.service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.service.spring.dao.MyProductDAO;
import com.service.spring.domain.MyProduct;

//데이타 가공...이곳에는 select문만 있어야한다. delete문은 없는게 맞다.
@Service
public class MyProductService {

	@Autowired
	private MyProductDAO myProductDAO;
	
	public void addProduct(MyProduct product) {
		myProductDAO.addProduct(product);
	}

	public MyProduct findProductByName(String name) {
		return myProductDAO.findProductByName(name);
	}

	public MyProduct findProductByMaker(String maker) {
		return myProductDAO.findProductByMaker(maker);
	}

	public List<MyProduct> findProducts() {
		return myProductDAO.findProducts();
	}
}
