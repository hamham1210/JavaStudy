<!-- SQL definition -->
<mapper namespace="UserMapper02">
	<select id="getUser01" parameterType="string" resultType="user">
		SELECT
		user_id AS userId,
		user_name AS userName,
		password,
		age,
		grade,
		reg_date As
		regDate
		FROM users
		WHERE user_id like #{VALUE}
	</select>
	<select id="getUser02" parameterType="user" resultType="user">
		SELECT
		user_id AS userId,
		user_name AS userName,
		password,
		age,
		grade,
		reg_date As
		regDate
		FROM users
		WHERE user_id like #{userId}
	</select>
	<!-- 아이디가 user로 시작하는 사람을 검색... 와일드 카드 %,like연산자 사용 -->
	<select id="getUser03" parameterType="string" resultType="user">
		SELECT
		user_id AS userId,
		user_name AS userName,
		password,
		age,
		grade,
		reg_date As
		regDate
		FROM users
		WHERE user_id like CONCAT(#{VALUE}, '%')
	</select>
	<select id="getUser04" parameterType="string" resultType="user">
		SELECT
		user_id AS userId,
		user_name AS userName,
		password,
		age,
		grade,
		reg_date As
		regDate
		FROM users
		WHERE user_id like CONCAT(#{VALUE}, '%')
	</select>
</mapper>