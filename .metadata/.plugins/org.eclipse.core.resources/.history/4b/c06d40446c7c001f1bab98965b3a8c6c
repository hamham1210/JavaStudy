<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.springframework.org/schema/beans 
												 http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	<!-- 사용자 정의 빈:: id ="user01":: setter 값 주입 ::단순파라미터 값 주입 ::id="01유저" age="01"-->
	<bean id="user01" class="spring.service.domain.User">
	<property name="userId" value="01유저"/><!-- =>user01.setUserId("01유저")  -->
	<property name="age" value="01"/>
	</bean>
	<!--API빈 ::id="password" class="java.lang.String" :: 생성자 주입 :: 단순파라미터값 "7777"-->
	<bean id="password" class="java.lang.String">
	<constructor-arg value="7777"></constructor-arg>
	</bean>
	<!-- 사용자 정의 빈:: id ="user02":: setter 값 주입 ::단순파라미터 값 주입 ::id="02유저" age="02" password(위 정의한 빈)-->
	<bean id="user02" class="spring.service.domain.User">
	<property name="userId" value="02유저"/>
	<property name="age" value="02"/>
	<property name="password" ref="password"/>
	</bean>
</beans>